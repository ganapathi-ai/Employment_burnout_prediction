{
  "dashboard": {
    "id": null,
    "uid": "burnout-requests",
    "title": "Burnout API - Request Count",
    "tags": ["burnout", "api"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Total API Requests",
        "type": "stat",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Requests by Endpoint",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{endpoint}}",
            "refId": "A"
          }
        ]
      }
    ]
  },
  "overwrite": true
}
