[flake8]
max-line-length = 100
exclude = 
    venv,
    __pycache__,
    .git,
    .env,
    build,
    dist,
    .eggs,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    node_modules

ignore = E203,W503,E501

per-file-ignores =
    __init__.py:F401
    tests/*:F811,F841

count = True
statistics = True
show-source = True
